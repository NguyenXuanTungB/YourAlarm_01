<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimary"
              android:orientation="vertical"
              android:paddingTop="@dimen/abc_dialog_padding_top_material"
              tools:context="com.framgia.youralarm1.activity.AlertAlarmActivity">

    <TextView
        android:id="@+id/text_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/alert_title"
        android:textColor="@color/color_text_item_alarm"
        android:textSize="@dimen/abc_text_size_display_1_material"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/abc_action_bar_default_height_material">

        <TextView
            android:id="@+id/text_time_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="bottom"
            android:text="@string/time_alarm_sample"
            android:textColor="@color/color_text_item_alarm"
            android:textSize="@dimen/abc_text_size_display_3_material"/>

        <TextView
            android:id="@+id/text_time_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/text_time_alarm"
            android:layout_toRightOf="@+id/text_time_alarm"
            android:gravity="center"
            android:text="@string/time_format_sample"
            android:textColor="@color/color_text_item_alarm"
            android:textSize="@dimen/abc_text_size_display_1_material"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.framgia.youralarm1.widget.CircularButton
            android:id="@+id/circle_button_snooze"
            android:layout_width="0dp"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            app:backgroundSelectedColor="@color/color_background_button_day"
            app:text="@string/sunday_short"
            app:textColor="@color/color_text_button_day"
            app:textSize="@dimen/text_size_button_day"/>

        <com.framgia.youralarm1.widget.CircularButton
            android:id="@+id/circle_button_alarm"
            android:layout_width="0dp"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            app:backgroundSelectedColor="@color/color_background_button_day"
            app:text="@string/sunday_short"
            app:textColor="@color/color_text_button_day"
            app:textSize="@dimen/text_size_button_day"/>

        <com.framgia.youralarm1.widget.CircularButton
            android:id="@+id/circle_button_dismiss"
            android:layout_width="0dp"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            app:backgroundSelectedColor="@color/color_background_button_day"
            app:text="@string/sunday_short"
            app:textColor="@color/color_text_button_day"
            app:textSize="@dimen/text_size_button_day"/>

    </LinearLayout>

</LinearLayout>